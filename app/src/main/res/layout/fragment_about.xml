<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageToShow"
        android:layout_width="255dp"
        android:layout_height="150dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iitgnightview"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IIT GUWAHATI ALUMNI ASSOCIATION"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:textColor="#3d4780"
        android:textAlignment="center"
        android:layout_below="@+id/imageToShow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IIT Guwahati Alumni Association is group of IIT Guwahati Alumni taken responsibility to build on community and continously add value to group and society"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:textColor="#3b3b3b"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#bababa"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="All Rights Reserved"
            android:id="@+id/textView4"
            android:textSize="14sp"
            android:textAlignment="center"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#404040"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Copyright &#169; 2015 IIT Guwahati Alumni Asscociation."
            android:id="@+id/textView3"
            android:textSize="14sp"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:layout_above="@+id/textView4"
            android:textColor="#404040"/>
    </RelativeLayout>


</RelativeLayout>